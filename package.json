{
  "name": "bun-hono-expense-tracker",
  "module": "server/index.ts",
  "type": "module",
  "scripts": {
    "install:client": "cd client && bun install --ci",
    "install:server": "bun install --ci",
    "install": "bun run install:server && bun run install:client",
    "build:client": "cd client && bun run build",
    "dev": "bun --watch server/index.ts",
    "start": "NODE_ENV=production && bun run server/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "hono": "^4.6.8",
    "zod": "^3.23.8"
  }
}
